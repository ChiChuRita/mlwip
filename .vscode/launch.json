{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug Rust Test - specific test",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--manifest-path=${workspaceFolder}/src/core/tcp_rust/Cargo.toml"
                ],
                "filter": {
                    "name": "handshake_tests",
                    "kind": "test"
                }
            },
            "args": ["${input:testName}", "--exact", "--nocapture"],
            "cwd": "${workspaceFolder}/src/core/tcp_rust",
            "sourceLanguages": ["rust"]
        },
        {
            "name": "(lldb) Debug Rust - three_way_handshake_passive",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test",
                    "handshake_tests",
                    "--manifest-path=${workspaceFolder}/src/core/tcp_rust/Cargo.toml"
                ]
            },
            "args": ["test_three_way_handshake_passive", "--exact", "--nocapture"],
            "cwd": "${workspaceFolder}/src/core/tcp_rust",
            "sourceLanguages": ["rust"]
        },
        {
            "name": "(lldb) Debug All Rust Tests",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--manifest-path=${workspaceFolder}/src/core/tcp_rust/Cargo.toml"
                ]
            },
            "args": ["--nocapture"],
            "cwd": "${workspaceFolder}/src/core/tcp_rust",
            "sourceLanguages": ["rust"]
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "Enter the test name to debug",
            "default": "test_three_way_handshake_passive"
        }
    ]
}
